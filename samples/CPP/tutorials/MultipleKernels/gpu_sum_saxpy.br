////////////////////////////////////////////////////////////////////////////////
//!
//! \file   sum_saxpy.br
//!
//! \brief  Defines the sum and saxpy kernels for GPU
//!
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
//!
//! \brief  Sums two streams
//!
//! \param  i0  Input stream 0
//! \param  i1  Input stream 1
//! \param  o   Output stream
//!
////////////////////////////////////////////////////////////////////////////////

kernel void
sumGPU(float i0<>, float i1<>, out float o<>)
{
    o = i0 + i1;
}

////////////////////////////////////////////////////////////////////////////////
//!
//! \brief  Implements saxpy i.e. a*x + y
//!
//! \param  a   Scalar constant
//! \param  i0  Input stream 0
//! \param  i1  Input stream 1
//! \param  o   Output stream
//!
////////////////////////////////////////////////////////////////////////////////

kernel void
saxpyGPU(float a, float x<>, float y<>, out float o<>)
{
    o = a * x + y;
}
